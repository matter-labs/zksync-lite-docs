{
  "hosting": {
    "cleanUrls": true,
    "trailingSlash": true,
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/dev/bug-bounty.html",
        "destination": "/dev/security/bug-bounty.html",
        "type": 301
      },
      {
        "source": "/faq/:random*",
        "destination": "/userdocs/:random*",
        "type": 301
      }
    ]
  }
}
