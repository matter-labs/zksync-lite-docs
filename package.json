{
  "name": "zksync-docs",
  "description": "zkSync.io new landing",
  "private": true,
  "version": "2.8.0",
  "license": "MIT",
  "author": "Matter Labs",
  "homepage": "https://docs.zksync.io",
  "keywords": [
    "zk-rollup",
    "web3",
    "wallet",
    "defi",
    "cryptopayments",
    "zksync dapps",
    "dapp",
    "ethers",
    "zkSync",
    "Matter Labs",
    "rollup",
    "ZK rollup",
    "zero confirmation",
    "ZKP",
    "zero-knowledge proofs",
    "Ethereum",
    "crypto",
    "blockchain",
    "permissionless",
    "L2",
    "secure payments",
    "scalable crypto payments"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "yarn docs:build && firebase deploy",
    "cspell": "cspell docs/**/*.md",
    "md:lint": "markdownlint -c .markdownlintrc docs",
    "md:fix": "markdownlint --fix -c .markdownlintrc docs",
    "md:deadlinks": "check-md",
    "lint": "yarn cspell && yarn md:lint && yarn md:deadlinks",
    "semantic-release": "semantic-release",
    "postinstall": "husky install"
  },
  "check-md": {
    "cwd": "./docs",
    "defaultIndex": [
      "README.md"
    ],
    "exitLevel": "warn",
    "ignoreFootnotes": true
  },
  "bugs": {
    "url": "https://github.com/matter-labs/zksync-docs/issues"
  },
  "dependencies": {
    "markdown-it-footnote": "^3.0.3",
    "vuepress": "^1.8.2",
    "vuepress-plugin-canonical": "^1.0.0",
    "vuepress-plugin-fulltext-search": "^2.2.1",
    "vuepress-plugin-sitemap": "^2.3.1"
  },
  "devDependencies": {
    "check-md": "^1.0.2",
    "cspell": "^5.12.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "markdownlint": "^0.24.0",
    "markdownlint-cli": "^0.29.0"
  },
  "lint-staged": {
    "./docs/**/*.md": [
      "markdownlint -c .markdownlintrc --fix",
      "yarn run md:deadlinks",
      "yarn run cspell"
    ]
  },
  "optionalDependencies": {
    "fs-extra": "^9.1.0"
  },
  "resolutions": {
    "highlight.js": "10"
  },
  "packageManager": "yarn@3.1.1"
}
