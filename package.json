{
  "name": "zksync-docs",
  "description": "zkSync.io new landing",
  "private": true,
  "version": "2.6.0",
  "license": "MIT",
  "author": "Matter Labs",
  "homepage": "https://docs.zksync.io",
  "keywords": [
    "zksync",
    "dev-preview",
    "early-access",
    "zk-rollup",
    "frontend-team",
    "ethereum",
    "web3",
    "wallet",
    "defi",
    "typescript",
    "cryptopayments",
    "matter labs",
    "zksync dapps",
    "dapp",
    "ethers",
    "zkSync",
    "Matter Labs",
    "rollup",
    "ZK rollup",
    "zero confirmation",
    "ZKP",
    "zero-knowledge proofs",
    "Ethereum",
    "crypto",
    "blockchain",
    "permissionless",
    "L2",
    "secure payments",
    "scalable crypto payments"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "parser": "markdown",
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "yarn docs:build && firebase deploy",
    "fmt": "prettier --write \"docs/**/*.md\"",
    "fmt:check": "prettier --check \"docs/**/*.md\"",
    "cspell": "cspell docs/**/*.md",
    "md:lint": "markdownlint -c .markdownlintrc docs",
    "md:deadlinks": "check-md",
    "ci": "yarn run fmt:check; yarn run cspell; yarn run md:lint; yarn run md:deadlinks",
    "semantic-release": "semantic-release",
    "postinstall": "husky install"
  },
  "check-md": {
    "cwd": "./docs",
    "defaultIndex": [
      "README.md"
    ],
    "exitLevel": "warn",
    "ignoreFootnotes": true
  },
  "bugs": {
    "url": "https://github.com/matter-labs/zksync-docs/issues"
  },
  "dependencies": {
    "markdown-it-footnote": "^3.0.3",
    "vuepress": "^1.8.2",
    "vuepress-plugin-canonical": "^1.0.0",
    "vuepress-plugin-fulltext-search": "^2.2.1",
    "vuepress-plugin-sitemap": "^2.3.1"
  },
  "devDependencies": {
    "check-md": "^1.0.2",
    "cspell": "^5.12.3",
    "husky": "^7.0.4",
    "markdownlint": "^0.24.0",
    "markdownlint-cli": "^0.29.0",
    "prettier": "2.4.1"
  },
  "lint-staged": {
    "*.md": [
      "yarn run md:lint",
      "yarn run md:deadlinks",
      "yarn run cspell",
      "yarn run fmt"
    ]
  },
  "optionalDependencies": {
    "fs-extra": "^9.1.0"
  },
  "resolutions": {
    "highlight.js": "10"
  },
  "packageManager": "yarn@3.1.1"
}
