.hero
    img 
        transform: scale(0.8)

.site-name.can-hide
    display: none

.footnote
    font-size: 0.8rem

.newsletter-input {
    display: inline-block;
    width: 18rem;
    font-size: 1rem;
    color: $ml2;
    background-color: #fff;
    padding: 0.5rem 1rem;
    margin: 0.1rem;
    border-radius: 4px;
    transition: background-color 0.1s ease;
    box-sizing: border-box;
    border: 1px solid #ddd;
}


.videoframe {
    margin-top: 15px;
    margin-bottom: 25px;
}

.newsletter-button {
    display: inline-block;
    width: 10rem;
    font-size: 1rem;
    color: $ml2;
    background-color: #fff;
    padding: 0.5rem 1.5rem;
    margin: 0.2rem;
    border-radius: 4px;
    transition: background-color 0.1s ease;
    box-sizing: border-box;
    border: 1px solid #ccc;
    cursor pointer;

    &:hover {
    background-color: darken(#fff, 5%);
    }
}


/* dune iframe */
div#root {
  position: absolute;
  width: 100%;
  left: -5px;
  height: 100%;
}

/* dune iframe */
div#root > iframe {
  display: block;
  width: 100%;
  height: 100%;
  border: none;
}
